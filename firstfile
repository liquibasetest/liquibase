df = spark.read.parquet("s3://path/to/parquet/files/income_file/*/*")

# Get distinct schemas
schemas = df.schema

# Write schema details to a single file
schema_details = {}
schema_details["schema"] = df.schema.json()

# Write schema details to file
schema_df = spark.createDataFrame([schema_details])
schema_df.write.mode("overwrite").parquet("s3://path/to/output/schema_details")
