SELECT 
    COLUMN_NAME,
    POLICY_NAME,
    POLICY_EXPRESSION
FROM 
    INFORMATION_SCHEMA.COLUMNS
JOIN 
    INFORMATION_SCHEMA.ELEMENT_ACCESS_POLICIES 
ON 
    COLUMNS.TABLE_CATALOG = ELEMENT_ACCESS_POLICIES.OBJECT_SCHEMA
    AND COLUMNS.TABLE_NAME = ELEMENT_ACCESS_POLICIES.OBJECT_NAME
    AND COLUMNS.COLUMN_NAME = ELEMENT_ACCESS_POLICIES.COLUMN_NAME
WHERE 
    COLUMNS.TABLE_NAME = 'your_table_name'
    AND COLUMNS.TABLE_SCHEMA = 'your_table_schema';
